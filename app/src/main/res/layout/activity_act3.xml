<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".Act3">

    <TextView
        android:id="@+id/txt_survey_type"
        android:background="#000000"
        android:text="\n ECE SURVEY"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="70sp" />

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_marginTop="120sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/question"
            android:text="Question: "
            android:textSize="17sp"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_question"
            android:textAlignment="center"
            android:layout_marginTop="13sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="14sp"
            android:layout_below="@id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ansone"
            android:layout_marginTop="30sp"
            android:layout_below="@id/txt_question"
            android:text="Answer 1: "
            android:textSize="17sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans_one"
            android:layout_marginTop="13sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="14sp"
            android:layout_below="@id/ansone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/anstwo"
            android:layout_marginTop="20sp"
            android:layout_below="@id/txt_ans_one"
            android:text="Answer 2: "
            android:textSize="17sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans_two"
            android:textAlignment="center"
            android:layout_marginTop="13sp"
            android:layout_marginLeft="10sp"
            android:textSize="14sp"
            android:layout_marginRight="10sp"
            android:layout_below="@id/anstwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ansthree"
            android:layout_marginTop="20sp"
            android:layout_below="@id/txt_ans_two"
            android:text="Answer 3: "
            android:textSize="17sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans_three"
            android:textAlignment="center"
            android:layout_marginTop="13sp"
            android:layout_marginLeft="10sp"
            android:textSize="14sp"
            android:layout_marginRight="10sp"
            android:layout_below="@id/ansthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_login_pwd"
            android:id="@+id/btn_submit_survey"
            android:layout_width="200sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10sp"
            android:layout_height="40sp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#7ab800"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="SUBMIT"
            fancy:fb_textColor="#FFFFFF" />


    </RelativeLayout>

</RelativeLayout>